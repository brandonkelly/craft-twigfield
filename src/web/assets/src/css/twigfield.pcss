    background-repeat: no-repeat;
    background-position: 50% 50%;
    background-size: 10px;
}

table.editable tbody .monaco-editor-twigfield--icon {
    top: 9px;
}

body.ltr .monaco-editor-twigfield--icon {
    right: 7px;
}

body.rtl .monaco-editor-twigfield--icon {
    left: 7px;
}

