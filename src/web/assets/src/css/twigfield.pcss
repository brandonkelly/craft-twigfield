/**
 * This injects all of Tailwind's utility classes, generated based on your
 * config file.
 *
 */
@import "tailwindcss/utilities";

/* Ensure the right font-family is used */
.codicon[class*="codicon-"] {
    font-family: "codicon-override" !important;
}

/* Disable the ruler overview since we don't scroll */
.decorationsOverviewRuler {
    display: none !important;
}

/* For the placeholder text */
.monaco-placeholder {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 1;
    opacity: 0.7;
}

/* Get rid of the editor background */
.monaco-editor, .monaco-editor-background, .monaco-editor .inputarea.ime-input {
    background-color: transparent !important;
}

/* For an inline editor in a table cell (or elsewhere that no chrome is desired) in the CP */
.monaco-editor-inline-frame {
    background-clip: padding-box;
    text-align: left;
}

/* Editor a11y focus styles */
.monaco-editor-inline-frame:focus-within {
    box-shadow: 0 0 0 1px #127fbf, 0 0 0 3px rgb(18 127 191 / 50%);
}

/* Remove padding from twigfield cells in table fields, so the a11y focus is the entire cell */
td.type-channel.type-structure.twigfield-cell {
    padding: 0;
}

/* Make the editor look like a Craft text field */
.monaco-editor-background-frame {
    border-radius: 3px;
    border: 1px solid rgba(96, 125, 159, .25);
    background-color: #fbfcfe;
    background-clip: padding-box;
    margin-top: 5px;
    margin-bottom: 5px;
}

/* Editor a11y focus styles */
.monaco-editor-background-frame:focus-within {
    box-shadow: 0 0 0 1px #127fbf, 0 0 0 3px rgb(18 127 191 / 50%);
}

.monaco-editor-twigfield {
    padding: 6px 9px;
}

body.ltr .monaco-editor-twigfield {
    padding-right: 32px;
}

body.rtl .monaco-editor-twigfield {
    padding-left: 32px;
}

table.editable tbody .monaco-editor-twigfield {
    padding: 7px 10px;
}

/* Twig icon */
